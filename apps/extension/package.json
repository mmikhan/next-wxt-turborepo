{
  "name": "wxt-react-starter",
  "description": "manifest.json description",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "NODE_OPTIONS='--no-experimental-webstorage' wxt",
    "dev:firefox": "NODE_OPTIONS='--no-experimental-webstorage' wxt -b firefox",
    "build": "NODE_OPTIONS='--no-experimental-webstorage' wxt build",
    "build:firefox": "NODE_OPTIONS='--no-experimental-webstorage' wxt build -b firefox",
    "zip": "NODE_OPTIONS='--no-experimental-webstorage' wxt zip",
    "zip:firefox": "NODE_OPTIONS='--no-experimental-webstorage' wxt zip -b firefox",
    "compile": "tsc --noEmit",
    "postinstall": "NODE_OPTIONS='--no-experimental-webstorage' wxt prepare"
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@wxt-dev/module-react": "^1.1.3",
    "typescript": "^5.9.2",
    "wxt": "^0.20.6"
  }
}
